{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schemas/order",
    "title": "Order",
    "description": "An order from Acme",
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for an order",
        "type": "integer"
      },
      "products": {
        "description": "List of products (IDs) purchased",
        "type": "array",
        "items": {
            "type": "number"
        },
        "minItems": 1
      },
      "customer": {
        "$ref": "/schemas/customer"
      },
      "notes": {
        "$ref": "#/$defs/notes"
      }
    },
    "required": [ "id", "products", "customer" ],
    "$defs": {
      "notes": { 
        "title": "OrderNotes",
        "type": "object",
        "properties": {
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }